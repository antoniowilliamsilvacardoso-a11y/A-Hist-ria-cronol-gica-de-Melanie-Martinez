  <script>
    // 8. Fun√ß√µes dos bot√µes
    // Bot√£o 1 ‚Äî Tema: alterna claro/escuro (classe .escuro no <html>)
    document.getElementById('btnTema').addEventListener('click', ()=>{
      document.documentElement.classList.toggle('escuro');
      // feedback r√°pido
      const msg = document.documentElement.classList.contains('escuro') ? 'Tema escuro ativo' : 'Tema claro ativo';
      console.log(msg);
    });

    // Bot√£o 2 ‚Äî Fonte: alterna 3 tamanhos (padr√£o ‚Üí grande ‚Üí gigante ‚Üí padr√£o)
    const cicloFontes = ['','fonte-grande','fonte-gigante'];
    let idxFonte = 0;
    document.getElementById('btnFonte').addEventListener('click', ()=>{
      // remove classes antigas
      document.documentElement.classList.remove('fonte-grande','fonte-gigante');
      idxFonte = (idxFonte + 1) % cicloFontes.length;
      if(cicloFontes[idxFonte]) document.documentElement.classList.add(cicloFontes[idxFonte]);
    });

    // Bot√£o 3 ‚Äî Topo: rola suavemente para o header
    document.getElementById('btnTopo').addEventListener('click', ()=>{
      window.scrollTo({top:0, behavior:'smooth'});
    });

    // Extras opcionais: real√ßar card "destaque" quando chega na se√ß√£o
    const alvo = document.getElementById('post4');
    const obs = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting){ alvo.classList.add('destaque'); }
        else{ alvo.classList.remove('destaque'); }
      });
    }, {threshold:.3});
    obs.observe(alvo);
  </script>
